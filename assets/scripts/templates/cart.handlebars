
 {{#each serialized as |serialized|}}
    <div class="row" data-id={{serialized.id}}>
      <div class="col-md-3 cart-item-name">
        <p>{{serialized.name}}</p>
      </div>
      <div class="col-md-3 cart-item-price">
        <p>${{serialized.price}}</p>
      </div>
      <div class="col-md-3 cart-item-quant">
        <form class="update-form" data-id={{serialized.id}}>
          <div class="form-group">
            <input class="quantity" type="number" min=1 step=1 value={{serialized.count}} name="item[count]">
            <button type="submit" class="update-cart-item">Update Item Quantity {{serialized.id}} </button>
          </div>
        </form>
      </div>
      <div class="col-md-3">
        <button type="button" data-id={{serialized.id}} class="delete-cart-item">Delete Item from Cart </button>
        <br>
      </div>
    </div>
  {{/each}}
